@model Showroom.ViewModels.Home.LoginVM 
@{ 
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["home"] = "LOGIN";
}
<div class="row justify-content-center">
<fieldset>
            <div class="row">
               <div class="col-md-12">
                 <h4 class="text-primary text-center">Login</h4>
                </div>
            </div>

<div class="row justify-content-center">
    <div class="col-md-6">

        <form action="/Home/Login" method="post">
            <div class="form-group">
                <label for="username">@Html.LabelFor(m => m.Username)</label>
                <input name="Username" type="text" class="form-control" id="username" placeholder="Enter username..." formControlName="username">
           
            </div>
            <div class="row-cols-sm-3 text-danger" >
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            <div class="form-group">
                <label for="password">@Html.LabelFor(m => m.Password)</label>
                <input name="Password" type="password" class="form-control" id="password" placeholder="Enter password..." formControlName="password">
            </div>
             <div class="row-cols-sm-3 text-danger">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-secondary" style="margin-top: 10px" >Login</button>
            </div>
        </form>
    </div>
</div>
</fieldset>
</div>