@model Showroom.ViewModels.Users.EditVM
@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["home"] = "EDIT USER";
}

<fieldset>
    <div class="row">
               <div class="col-md-12">
                 <h4 class="text-primary text-center">Edit USER</h4>
                </div>
            </div>
<div class="row justify-content-center">
    <div class="col-md-6">

    <form action="/Users/Edit" method="post">
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <div class="row">
               <label for="username">@Html.LabelFor(m => m.Username)</label>
               <input name="Username" type="text" class="form-control" id="username" placeholder="Enter username..." formControlName="username" value="@Model.Username">

            </div>      
            <div class="row-cols-sm-3 text-danger" >
                    @Html.ValidationMessageFor(m => m.Username)
                </div>

          <div class="form-group">
            <div class="row">
               <label for="username">@Html.LabelFor(m => m.Password)</label>
               <input name="Password" type="password" class="form-control" id="password" placeholder="Enter password..." formControlName="password" value="@Model.Password">

            </div>
            <div class="row-cols-sm-3 text-danger" >
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

           <div class="form-group">
            <div class="row">
               <label for="firstName">@Html.LabelFor(m => m.FirstName)</label>
               <input name="FirstName" type="text" class="form-control" id="firstName" placeholder="Enter First Name..." formControlName="firstName" value="@Model.FirstName">

            </div>
            <div class="row-cols-sm-3 text-danger" >
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>


            <div class="form-group">
            <div class="row">
               <label for="lastName">@Html.LabelFor(m => m.LastName)</label>
               <input name="LastName" type="text" class="form-control" id="firstName" placeholder="Enter Last Name..." formControlName="lastName" value="@Model.LastName">

            </div>
            <div class="row-cols-sm-3 text-danger" >
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>

            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Save" />
                    <a href="/Users/Index" class="right">Back</a>
                </div>
            </div>
        </div>
    </form>
    </div>
    </div>
</fieldset>